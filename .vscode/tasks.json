{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Monitor TS Errors",
      "type": "shell",
      "command": "./node_modules/.bin/tsc",
      "args": ["--watch", "--noEmit", "--project", "./"],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "problemMatcher": "$tsc-watch"
    }
  ]
}
